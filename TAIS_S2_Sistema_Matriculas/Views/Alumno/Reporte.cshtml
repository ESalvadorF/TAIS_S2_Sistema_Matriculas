@model IEnumerable<TAIS_S2_Sistema_Matriculas.Models.Alumno>
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Descargar Reporte de Alumnos</title>
    <meta charset="UTF-8">
    <style>
        td {
            font-size: 12px;
        }
    </style>

</head>
<body style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin:20px;font-size:12px;">


    <h2 style="margin:0px;text-align:center">Reporte de Alumnos</h2>

    <div style="margin-top: 20px;">
        <table class="table" style="width:100%;border-collapse: collapse;" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApePaterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApeMaterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OtroNombre)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApePaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApeMaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OtroNombre)
                    </td>

                </tr>
            }

        </table>
    </div>

    <script>
        window.print();
    </script>
</body>
</html>