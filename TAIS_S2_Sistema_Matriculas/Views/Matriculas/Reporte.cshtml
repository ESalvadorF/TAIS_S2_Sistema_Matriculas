@model IEnumerable<TAIS_S2_Sistema_Matriculas.Models.Matricula>


@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Descargar Reporte de Matriculas</title>
    <meta charset="UTF-8">
    <style>
        td {
            font-size: 12px;
        }
    </style>

</head>
<body style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin:20px;font-size:12px;">


    <h2 style="margin:0px;text-align:center">Reporte de Matriculas</h2>

    <div style="margin-top: 20px;">
        <table class="table" style="width:100%;border-collapse: collapse;" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Alumno.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seccion.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoMatricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaMatricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPeriodo)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alumno.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seccion.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoMatricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaMatricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPeriodo)
                    </td>

                </tr>
            }

        </table>
    </div>

    <script>
        window.print();
    </script>
</body>
</html>